<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"

    >
    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/menu_item_background_selector"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >
        <RadioButton
            android:id="@+id/radioButton"
            style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/index"
            android:layout_width="72dp"
            android:layout_height="match_parent"

            android:background="@drawable/menu_item_background_selector"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"

            android:text="999"
            android:textSize="16sp"
            android:visibility="visible"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/menu_item_background_selector"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_item_background_selector"
            android:text="task"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/load_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="72dp"
                android:text="loadtime"
                android:textSize="16sp"
                android:textColor="@color/black_overlay" />

            <TextView
                android:id="@+id/unload_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unload time"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>