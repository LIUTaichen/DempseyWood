<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hitstory_edit_bottome_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/menu_item_background_selector"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="48dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <ImageView
        android:id="@+id/imageViewSwapIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="32dp"
        app:srcCompat="@drawable/ic_swap_vert_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:text="@string/button_name_change_task"
        android:textSize="16sp" />


</LinearLayout>
